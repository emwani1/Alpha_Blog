
<h1 align = "center">ALL USERS</h1>

<%= will_paginate %>

<% @users.each do |user| %>
<ul class = "listing">
  <div class = "row">
    <div class = "well col-md-4 col-md-offset-4">
      <li><%= link_to gravatar_for(user),user_path(user) %></li>
      <li class = "article-title">
        <%= link_to user.username, user_path(user) %>
      </li>
      <li>
        <small>
          <%= pluralize(user.articles.count,"article") if user.articles %>
          <%= link_to "Delete Account" ,user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete the user"} %>
        </small>
      </li>
    </div>
  </div>
</ul>
<% end %>
<%= will_paginate %>